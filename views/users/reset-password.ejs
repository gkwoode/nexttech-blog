<div class="min-h-screen flex flex-col items-center justify-center bg-transparent">
  <h1 class="pb-10 font-bold text-2xl lg:text-4xl">NextTech Blog</h1>
  <div class="flex flex-col bg-white shadow-md px-4 sm:px-6 md:px-8 lg:px-10 py-8 rounded-md w-full max-w-md">
    <p>Enter your new password.</p>

    <div class="self-center text-red-600 pt-4"><%- include('../partials/messages') -%></div>
    
    <form method="POST" action="/reset-password/<%= resetToken %>"  class="mt-10 flex flex-col">
      <div>
        <label for="password" class="mb-1 text-xs sm:text-sm tracking-wide text-gray-600">New Password:</label>
        <input 
          type="password" 
          id="password" 
          name="password"
          placeholder="Enter new password"
          class="text-sm sm:text-base placeholder-gray-500 rounded-lg border border-gray-400 w-full px-4 py-2 focus:outline-none focus:border-blue-400" 
          required
        >
      </div>

      <div>
        <label for="password2" class="mb-1 text-xs sm:text-sm tracking-wide text-gray-600">Confirm Password:</label>
        <input 
          type="password2" 
          id="password2" 
          name="password2"
          placeholder="Confirm password"
          class="text-sm sm:text-base placeholder-gray-500 rounded-lg border border-gray-400 w-full px-4 py-2 focus:outline-none focus:border-blue-400" 
          required
        >
      </div>

      <button 
        type="submit" 
        value="" 
        class="flex items-center justify-center focus:outline-none text-white text-sm sm:text-base bg-blue-600 hover:bg-blue-700 rounded py-2 w-full transition duration-150 ease-in mt-10"
      >
        Reset Password
      </button>
    </form>
  </div>
</div>